{
    "compilerOptions": {
        "strict": true,
        "moduleResolution": "node",
        "incremental": true,
        "outDir": "dist",
        "lib": [
            "es2022"
        ],
        "module": "es2022",
        "sourceMap": true,
        "target": "ES2022",
        "baseUrl": ".",
        "paths": {
            "*": [
                "*",
                "node_modules/@moddable/typings/*"
            ]
        },
        "types": [
            "./node_modules/@moddable/typings/xs",
            "./node_modules/@moddable/typings/mcpack",
            "./types/lib-dom"
        ]
    },
    "include": [
        "src/**/*.ts"
    ]
}
